<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:padding="8dp">
    <ImageView
        android:id="@+id/shoplistitem_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />
    <TextView
        android:id="@+id/shoplistitem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shoplistitem_image"
        android:layout_toRightOf="@+id/shoplistitem_image"
        android:textSize="17dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/shoplistitem_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shoplistitem_name"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/shoplistitem_image"
        android:textSize="15dip" />
    <TextView
        android:id="@+id/shoplistitem_effect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shoplistitem_price"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/shoplistitem_image"
        android:textColor="#545454"
        android:textSize="13dip" />
</RelativeLayout>